<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="ActionBarStyle">
		<item name="colorAccent">@color/colorAccent</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="android:textColorPrimary">@color/colorAccent</item>
		<item name="actionMenuTextColor">@color/colorAccent</item>
		<item name="android:textColorSecondary">@color/colorAccent</item>
		<item name="android:fontFamily">@font/abel</item>
	</style>

	<style name="ProgressTheme">
		<item name="colorAccent">@color/colorPrimary</item>
	</style>


	<style name="EditTextStyle" parent="Theme.AppCompat.Light">
		<item name="colorAccent">@color/dark_grey</item>
		<item name="android:textSize">18dp</item>
		<item name="android:colorControlNormal">@color/light_grey</item>
		<item name="android:colorControlHighlight">@color/dark_grey</item>
		<item name="android:fontFamily">@font/abel</item>
	</style>

	<style name="MyTextInputLayoutTheme">
		<item name="hintAnimationEnabled">false</item>
		<item name="android:fontFamily">@font/abel</item>
		<item name="android:textSize">18dp</item>
		<item name="android:colorControlActivated">@color/dark_grey</item>
		<item name="android:colorControlHighlight">@color/dark_grey</item>
		<item name="android:colorActivatedHighlight">@color/dark_grey</item>
	</style>

	<style name="ErrorTextInputFontStyle" parent="TextAppearance.Design.Error">
		<item name="android:fontFamily">@font/abel</item>
		<item name="android:textSize">16dp</item>
		<item name="android:textColor">@color/warning_red</item>
		<item name="android:colorControlHighlight">@color/dark_grey</item>
		<item name="android:colorControlActivated">@color/dark_grey</item>
		<item name="android:colorActivatedHighlight">@color/dark_grey</item>
		<item name="android:colorControlNormal">@color/dark_grey</item>
	</style>

</resources>
